	<!-- 设置Session时长:以分钟为单位;如果是零或负数,那么会话就永远不会超时。 -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	<icon>
		<small-icon>/images/connect2_16x16.gif</small-icon>
		<large-icon>/images/data_16x16.gif</large-icon>
	</icon>

	<error-page>
		<error-code>404</error-code>
		<location>/common/error/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/common/error/500.jsp</location>
	</error-page>
</web-app>